@{
	ViewData["Title"] = "Home Page";
}

@using CreatureTeacher.Models
@using System.Collections.Generic
@model CreatureTeacher.Models.Creature

<h1>Make a New Friend!</h1>
<h2>How many unique creatures can you create?</h2>
<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--6-col">
		<div id="creature">
			@Html.Partial("_ShowCreature")
		</div>
	</div>
  @* <div class="mdl-cell mdl-cell--2-col"></div> *@
  <div class="mdl-cell mdl-cell--6-col new-creature-form-wrapper">

