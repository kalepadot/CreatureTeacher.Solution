								<td class="mdl-data-table__cell--non-numeric"></td>
								<td class="mdl-data-table__cell--non-numeric"></td>
								<td class="mdl-data-table__cell--non-numeric"></td>
								<td class="mdl-data-table__cell--non-numeric"></td>
							</tr>
						</tbody>
					</table>
					<div class="mdl-textfield mdl-js-textfield getmdl-select" id="eye-input">
						@Html.LabelFor(model => model.Eye)
						@Html.DropDownList("EyeId", null, new { @class="mdl-textfield__input"})
					</div>
				</div>

					<table class="mdl-data-table mdl-js-data-table">
						<thead>
							<tr>
								<th class="mdl-data-table__cell--non-numeric">Mouth Codons</th>
								<th class="mdl-data-table__cell--non-numeric">A T ?  (Chill)</th>
								<th class="mdl-data-table__cell--non-numeric">A C ?  (Teeth)</th>
