							</tr>
						</tbody>
					</table>


				<div class="mdl-textfield mdl-js-textfield getmdl-select">
					@Html.LabelFor(model => model.Head)
					@Html.DropDownList("HeadId", null, new { @class="mdl-textfield__input"})
				</div>

					<table class="mdl-data-table mdl-js-data-table">
						<thead>
							<tr>
								<th class="mdl-data-table__cell--non-numeric">Tail Codons</th>
								<th class="mdl-data-table__cell--non-numeric">G T ?  (Squirrel)</th>
								<th class="mdl-data-table__cell--non-numeric">G C ?  (Fox)</th>
								<th class="mdl-data-table__cell--non-numeric">G A ? (Bulb)</th>
								<th class="mdl-data-table__cell--non-numeric">G G ? (Fancy)</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td class="mdl-data-table__cell--non-numeric">G ? T (Pink)</td>
								<td class="mdl-data-table__cell--non-numeric"></td>
								<td class="mdl-data-table__cell--non-numeric"></td>
								<td class="mdl-data-table__cell--non-numeric"></td>
								<td class="mdl-data-table__cell--non-numeric"></td>
							</tr>
							<tr>
								<td class="mdl-data-table__cell--non-numeric">G ? C (Purple)</td>
								<td class="mdl-data-table__cell--non-numeric"></td>
								<td class="mdl-data-table__cell--non-numeric"></td>
