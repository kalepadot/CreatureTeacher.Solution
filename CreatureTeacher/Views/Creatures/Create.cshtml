								<td class="mdl-data-table__cell--non-numeric"></td>
								<td class="mdl-data-table__cell--non-numeric"></td>
							</tr>
						</tbody>
					</table>

				<div class="mdl-textfield mdl-js-textfield getmdl-select" id="">
					@Html.LabelFor(model => model.Mouth)
					@Html.DropDownList("MouthId", null, new { @class="mdl-textfield__input"})	
				</div>

					<table class="mdl-data-table mdl-js-data-table">
						<thead>
							<tr>
								<th class="mdl-data-table__cell--non-numeric">Head Codons</th>
								<th class="mdl-data-table__cell--non-numeric">C T ?  (Boy Toy)</th>
								<th class="mdl-data-table__cell--non-numeric">C C ?  (Glam)</th>
								<th class="mdl-data-table__cell--non-numeric">C A ? (Pigtails)</th>
								<th class="mdl-data-table__cell--non-numeric">C G ? (Mohawk)</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td class="mdl-data-table__cell--non-numeric">C ? T (Black)</td>
								<td class="mdl-data-table__cell--non-numeric"></td>
								<td class="mdl-data-table__cell--non-numeric"></td>
								<td class="mdl-data-table__cell--non-numeric"></td>
