@{
	ViewData["Title"] = "Home Page";
}

@using CreatureTeacher.Models
@using System.Collections.Generic
@model List<CreatureTeacher.Models.Creature>

@if (@Model.Count == 0)
{
  <p>You have no creatures.  Would you like to create one?</p>
  @Html.ActionLink("Add New Creature", "Create")
}
<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--4-col">
    <div class="demo-card-square mdl-card mdl-shadow--2dp">
      <button class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored">
        <i class="material-icons">add</i>
      </button>
              <div class="mdl-card__actions mdl-card--border">
          <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
            @Html.ActionLink($"Add New", "Create")
          </a>
        </div>
    </div>
  </div>
    @foreach(Creature creature in Model)
    {
    <div class="mdl-cell mdl-cell--4-col">
      <div class="demo-card-square mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title mdl-card--expand">
          @* Image will go here *@
        </div>
        <div class="mdl-card__supporting-text">
          @creature.Name
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
            @Html.ActionLink($"View Details", "Details", new { id = creature.CreatureId })
          </a>
        </div>
      </div>
    </div>
    }
</div>

