@{  
  string bodyImagePath = Url.Content("../img/creatureImages/bodies/" + @ViewBag.Parent2Body);
  string eyeImagePath = Url.Content("../img/creatureImages/eyes/" + @ViewBag.Parent2Eye);
  string mouthImagePath = Url.Content("../img/creatureImages/mouths/" + @ViewBag.Parent2Mouth);
  string headImagePath = Url.Content("../img/creatureImages/hair/" + @ViewBag.Parent2Head);
  string tailImagePath = Url.Content("../img/creatureImages/tails/" + @ViewBag.Parent2Tail);
}

<div class="details-card-square mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title mdl-card--expand">
    <img src="@eyeImagePath" width="500" id="eyesImg">
    <img src="@bodyImagePath" width="500" id="bodyImg">
    <img src="@mouthImagePath" width="500" id="mouthImg">
    <img src="@tailImagePath" width="500" id="tailImg">
    <img src="@headImagePath" width="500" id="headImg">
  </div>
</div>
